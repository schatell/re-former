<%= form_for @user do |f| %>

	<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
	Username: <%= f.text_field 'username' %>
	Email Address: <%= f.email_field 'email' %>
	Password: <%= f.password_field 'password'%>
	<%= f.submit "Search" %>
<% end %>
